<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado activado -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Color blanco -->
            <size
                android:width="20dp"
                android:height="20dp" /> <!-- Tamaño del círculo -->
        </shape>
    </item>
    <!-- Estado desactivado -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Color blanco -->
            <size
                android:width="20dp"
                android:height="20dp" /> <!-- Tamaño del círculo -->
        </shape>
    </item>
</selector>