<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvVista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vista"
        android:textColor="@color/Azul_oscuro"
        android:textSize="16sp"
        android:gravity="start"
        android:padding="15dp"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:id="@+id/tvGeneracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generación y Consumo"
        android:textColor="@color/Azul_oscuro"
        android:textSize="16sp"
        android:padding="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/celeste" />

    <TextView
        android:id="@+id/tvGeneracionDetallada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generación Detallada"
        android:textColor="@color/Azul_oscuro"
        android:textSize="16sp"
        android:padding="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/celeste" />

    <TextView
        android:id="@+id/tvConsumoDetallado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consumo Detallado"
        android:textColor="@color/Azul_oscuro"
        android:textSize="16sp"
        android:padding="15dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>